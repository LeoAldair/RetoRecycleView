<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivRestaurandThumbnail"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvNameRestaurand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NAME RESTAURAND"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/ivRestaurandThumbnail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvNoteRestaurant"
        app:layout_constraintBottom_toTopOf="@id/tvDeliveryCost"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tvDeliveryCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costo de envÃ­o: "
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameRestaurand"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvDeliveryCostNumber"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/tvDeliveryCostNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$00.0"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameRestaurand"
        app:layout_constraintLeft_toRightOf="@id/tvDeliveryCost"
        app:layout_constraintRight_toLeftOf="@id/tvDeliveryTime"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/tvDeliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 00-00 min"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameRestaurand"
        app:layout_constraintLeft_toRightOf="@id/tvDeliveryCostNumber"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"
        />
    <TextView
        android:id="@+id/tvNoteRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="0.0"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="@id/ivRestaurandThumbnail"
        app:layout_constraintTop_toBottomOf="@id/ivRestaurandThumbnail" />

    <ImageView
        android:id="@+id/ivSimbol"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@color/green"
        app:layout_constraintTop_toBottomOf="@id/tvNameRestaurand"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvDeliveryCost"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>